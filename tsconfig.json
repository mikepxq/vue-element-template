{
  "compilerOptions": {
    "skipLibCheck": true, //跳过三方检查
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "noImplicitAny": false, //可以隐式any
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": [
    "./src/typings/index.d.ts",
    "./src/shims-vue.d.ts",
    "./src/typings/vuex.d.ts",
    "node_modules/element-plus/lib/index.d.ts",
    "src/typings/elementPlus.d.ts",
    "src/model/index.d.ts"
  ],
  "include": ["src", "mock"]
}
